<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contattoLista"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="4">
        <androidx.cardview.widget.CardView
            android:id="@+id/btnAdd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardCornerRadius="100dp"
            android:layout_margin="5dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/foto_lista"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@color/white"
                />

        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/nome_lista"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="@color/black"
            />
        <androidx.cardview.widget.CardView
            android:id="@+id/btnEdit"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/trasparet"
            android:outlineSpotShadowColor="@color/trasparet"
            app:cardElevation="0dp"
            app:cardMaxElevation="0dp"
            app:cardPreventCornerOverlap="false">

            <androidx.cardview.widget.CardView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                app:cardCornerRadius="17.5dp"
                android:backgroundTint="@color/black">
                <ImageView
                    android:padding="5dp"
                    android:id="@+id/edit_lista"
                    android:src="@drawable/edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:background="@color/yellow"
                    />
            </androidx.cardview.widget.CardView>



        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.cardview.widget.CardView>